<!DOCTYPE html>
<header class="header">
    <div class="overlay"></div>
</header>
<script src="~/Views/Home/main.js"></script>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Software Engineering</title>
</head>
<body>
    <div>
        @RenderBody()

        <table class="table table-striped">
            <tr>

                <th>ModuleCode</th>
                <th>Title</th>
                <th>Description</th>
                <th>Contents</th>
                <th>StaffAssociated</th>

            </tr>
            @foreach (var module in @Model.Modules)
            {
                <tr>
                    <td>@module.ModuleCode</td>
                    <td>@module.ModuleTitle</td>
                    <td>@module.ModuleDescription</td>
                    <td>@module.ModuleContents</td>
                    <td>@module.StaffAssociated</td>

                </tr>
            }

        </table>
        <!-- Adverts section -->
        <div class="Advertisements">
            <div class="container">
                <h1 class="text-center">Advertisements</h1>
                <div class="row">
                    <div class="col-md-4 col-lg-4 col-sm-12">
                        <div class="card">
                            <div class="card-img">
                                <img src="~/Advert Images/advert1.jfif" class="img-fluid">

                            </div>

                            <div class="card-body">
                                <h4 class="card-title">Cloud Infrastucture</h4>
                                <p class="card-text">

                                    Join our cloud courses to excell in cloud system!
                                </p>
                            </div>
                            <div class="card-footer">
                                <a href="" class="card-link">Learn more</a>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4 col-lg-4 col-sm-12">
                        <div class="card">
                            <div class="card-img">
                                <img src="~/Advert Images/advert 2.jfif" class="img-fluid">

                            </div>

                            <div class="card-body">
                                <h4 class="card-title">SG Courses</h4>
                                <p class="card-text">

                                    Not confident wiith using computers? Join our courses today!
                                </p>
                            </div>
                            <div class="card-footer">
                                <a href="" class="card-link">Learn more</a>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4 col-lg-4 col-sm-12">
                        <div class="card">
                            <div class="card-img">
                                <img src="~/Advert Images/advert3.jfif" class="img-fluid">

                            </div>

                            <div class="card-body">
                                <h4 class="card-title">COMPUTER</h4>
                                <p class="card-text">
                                    We are offering 10% for sudents on laptops. Don't miss the chance'
                                </p>
                            </div>
                            <div class="card-footer">
                                <a href="" class="card-link">Learn  more</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
